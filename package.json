{
  "name": "viva-cuba-dance-studio",
  "version": "0.0.1",
  "author": "Marcin Ziółek",
  "description": "viva-cuba-dance-studio",
  "scripts": {
    "build": "gulp build",
    "dev": "gulp",
    "lint": "",
    "start": "gulp",
    "watch": "gulp"
  },
  "chisel": {
    "src": {
      "assets": "assets/**/*",
      "app": "scripts/app.js",
      "base": "src",
      "dataPath": "data/",
      "scripts": "scripts/**/*",
      "styles": "styles/**/*",
      "stylesMain": "styles/*.scss",
      "templatesBuild": [
        "templates/*.{twig,html}"
      ],
      "templatesWatch": [
        "templates/**/*.{twig,html}",
        "data/**.json"
      ],
      "templatesPath": "templates/"
    },
    "dest": {
      "wordpress": "wp",
      "wordpressTheme": "viva-cuba-dance-studio",
      "assets": "assets",
      "base": "dist",
      "revManifest": "rev-manifest.json",
      "scripts": "scripts",
      "styles": "styles"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "browser-sync": "^2.17.5",
    "browserify": "^14.1.0",
    "del": "^2.2.2",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.0.4",
    "gulp-cli": "^1.2.2",
    "gulp-data": "^1.2.1",
    "gulp-eslint": "^3.0.1",
    "gulp-filter": "^5.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rev": "^7.1.2",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^3.1.0",
    "gulp-sass-glob": "^1.0.6",
    "gulp-sequence": "^0.4.6",
    "gulp-sourcemaps": "^2.1.1",
    "gulp-stylelint": "^3.7.0",
    "gulp-uglify": "^2.0.0",
    "pre-commit": "^1.2.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "isotope-layout": "^3.0.4",
    "jquery": "^3.1.1",
    "jquery-bridget": "^2.0.1",
    "normalize-scss": "^6.0.0",
    "owl.carousel": "^2.2.0",
    "tether": "^1.4.0"
  },
  "pre-commit": [
    "lint"
  ]
