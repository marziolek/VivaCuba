{% extends "layouts/base.twig" %}

{% block content %}
  <div class="row">
    <div class="col-xs-12 col-lg-8 push-md-2">
      <article id="post-{{post.ID}}">
        <section class="c-post">
          <h1 class="c-post__title">{{post.title}}</h1>
          {% if post.thumbnail and (post.post_type != 'event') %}
            <img src="{{ post.thumbnail }}" alt="zdjÄ™cie dla {{ post.title }}" class="img-responsive single-post--thumbnail">
          {% endif %}
          <div class="c-post__content">
            {{post.content}}
          </div>
        </section>
      </article>
    </div>
  </div>
{% endblock %}
