      <h1 class="c-post__title">{{post.title}}</h1>
      <div class="clearfix">
        {% if post.thumbnail %}
          <img src="{{ post.thumbnail }}" alt="zdjÄ™cie dla {{ post.title }}" class="img-responsive single-post--thumbnail instructor-thumbnail">
